{
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["react", "react-native"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": false,
    "noEmit": true
  },
  "exclude": ["node_modules", "lib"]
}
